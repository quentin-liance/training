# Environment Variables Configuration
# Copy this file to .env and fill in the values

# ========================================
# Application Settings
# ========================================

# Data file path (optional, defaults to data/20260101_20260201_operations.csv)
# DATA_FILE=/path/to/your/operations.csv

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file rotation size in MB (default: 500)
LOG_ROTATION_SIZE=500

# Log file retention in days (default: 10)
LOG_RETENTION_DAYS=10

# ========================================
# Streamlit Configuration
# ========================================

# Server port (default: 8501)
# STREAMLIT_PORT=8501

# Enable CORS (default: false)
# STREAMLIT_ENABLE_CORS=false

# Max upload size in MB (default: 200)
# STREAMLIT_MAX_UPLOAD_SIZE=200

# ========================================
# CSV Format Settings
# ========================================

# CSV separator (default: ;)
# CSV_SEPARATOR=;

# Decimal separator (default: ,)
# CSV_DECIMAL=,

# File encoding (default: utf-8)
# CSV_ENCODING=utf-8

# ========================================
# Analysis Parameters
# ========================================

# Default quantile threshold for extreme values exclusion (0-20, default: 10)
# DEFAULT_QUANTILE_THRESHOLD=10

# Pagination page size for AG Grid (default: 25)
# PAGINATION_PAGE_SIZE=25
